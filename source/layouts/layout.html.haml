%html.no-js{lang: 'en'}
  %head
    %meta{content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type'}
    %meta{charset: 'utf-8'}
    %meta{content: 'ie=edge', 'http-equiv' => 'x-ua-compatible'}
    %meta{content: 'width=device-width, initial-scale=1.0', name:'viewport'}
    %title= current_resource.data.title
    = javascript_include_tag 'modernizr'
    = javascript_include_tag 'instafeed'
    -# = javascript_include_tag 'jquery.min'
    -# = javascript_include_tag 'handlebars.min'
    = stylesheet_link_tag 'foundation/foundation'
    = stylesheet_link_tag 'scss/foundation'
    = stylesheet_link_tag 'style_modified'
    = stylesheet_link_tag 'style'
    %script{:defer => "defer", :src => "https://use.fontawesome.com/releases/v5.0.6/js/all.js"}

    -# %script#profile-template{:type => "text/x-handlebars-template"}
    -# :cdata
    %body{class: page_classes}

    = partial 'partials/nav'
    = yield
    = javascript_include_tag  'all'
    = partial 'partials/about'
    = partial 'partials/current'
    = partial 'partials/portfolio'
    = partial 'partials/resume'
    = partial 'partials/footer'
